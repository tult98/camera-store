{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["scope:backend", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.medusa"],
      "options": {
        "command": "medusa build && ln -sf .medusa/server/public/ public",
        "cwd": "apps/backend"
      },
      "configurations": {
        "production": {
          "command": "medusa build && ln -sf .medusa/server/public/ public"
        }
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "medusa develop",
        "cwd": "apps/backend"
      },
      "configurations": {
        "development": {
          "command": "medusa develop"
        },
        "production": {
          "command": "medusa start"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx medusa start",
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "TEST_TYPE=unit NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
          "TEST_TYPE=integration:http NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit",
          "TEST_TYPE=integration:modules NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit"
        ],
        "cwd": "apps/backend",
        "parallel": false
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "medusa exec ./src/scripts/seed.ts",
        "cwd": "apps/backend"
      }
    },
    "reset-database": {
      "executor": "nx:run-commands",
      "options": {
        "command": "medusa exec ./src/scripts/reset-database.ts",
        "cwd": "apps/backend"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx medusa db:migrate",
        "cwd": "apps/backend"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/backend"
      }
    }
  }
}