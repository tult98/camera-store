{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "yarn install --frozen-lockfile && nx run frontend:build",
    "watchPatterns": [
      "apps/frontend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/frontend && npx next start -p $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_DEFAULT_REGION": "us"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_DEFAULT_REGION": "us"
      }
    }
  },
  "regions": [
    "us-west1"
  ]
}