{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "yarn install --frozen-lockfile && nx run backend:build",
    "watchPatterns": [
      "apps/backend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/backend && npx medusa start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "9000",
        "RUN_MIGRATIONS": "true"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "PORT": "9000",
        "RUN_MIGRATIONS": "true"
      }
    }
  },
  "regions": [
    "us-west1"
  ]
}