{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": ["scope:backend", "type:app"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/.medusa"],
      "options": {
        "command": "medusa build",
        "cwd": "apps/backend"
      },
      "configurations": {
        "production": {
          "command": "medusa build"
        }
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "medusa develop",
        "cwd": "apps/backend"
      },
      "configurations": {
        "development": {
          "command": "medusa develop"
        },
        "production": {
          "command": "medusa start"
        }
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "medusa develop",
        "cwd": "apps/backend"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "medusa start",
        "cwd": "apps/backend"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "TEST_TYPE=unit NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
          "TEST_TYPE=integration:http NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit",
          "TEST_TYPE=integration:modules NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit"
        ],
        "cwd": "apps/backend",
        "parallel": false
      }
    },
    "test-unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "TEST_TYPE=unit NODE_OPTIONS=--experimental-vm-modules jest --silent --runInBand --forceExit",
        "cwd": "apps/backend"
      }
    },
    "test-integration": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "TEST_TYPE=integration:http NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit",
          "TEST_TYPE=integration:modules NODE_OPTIONS=--experimental-vm-modules jest --silent=false --runInBand --forceExit"
        ],
        "cwd": "apps/backend",
        "parallel": false
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "medusa exec ./src/scripts/seed.ts",
        "cwd": "apps/backend"
      }
    },
    "reset-database": {
      "executor": "nx:run-commands",
      "options": {
        "command": "medusa exec ./src/scripts/reset-database.ts",
        "cwd": "apps/backend"
      }
    },
    "generate-openapi": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp ../../tools/openapi/schema.json ../../tools/openapi/schema.json",
        "cwd": "apps/backend"
      }
    }
  },
  "implicitDependencies": ["shared-types"]
}